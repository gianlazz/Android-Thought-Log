            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout05"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <TextView android:id="@+id/seekbar5_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_alignParentLeft="true" />
                <TextView android:id="@+id/seekbar5_result"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Not At All"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:layout_gravity="center_horizontal"
        android:max="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6. Feeling bad about yourself - or that youâ€™re a failure or have let yourself or your family down"
        android:id="@+id/textView6" />

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout06"
